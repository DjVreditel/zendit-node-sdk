{
    "compilerOptions": {
        "module": "ES6",
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "target": "ES5",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": true,
        "noLib": false,
        "declaration": true,
        "lib": ["dom", "es6", "es5", "dom.iterable", "scripthost"],
        "outDir": "./",
    },
    "exclude": [
        "dist",
        "node_modules"
    ]
}